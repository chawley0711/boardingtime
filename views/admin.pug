extends layout
block content
  div(id='panel')
    table
      tr
        th ID
        th Username
        th Email
        th Age 
        th Role
      each user in users
        tr
          td #{user._id}
          td #{user.username}
          td #{user.email}
          td #{user.age}
          td #{user.role}
          td
            a(href='/posts/'+user._id)
              label Posts
          td
            a(href='/delete/'+user._id)
              label Delete
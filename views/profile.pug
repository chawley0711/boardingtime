extends layout

block content
  div(id='formPanel')
    form(id='form', method='post', action='/editUser')
      div(id='userInfoArea' class = 'register')
        h3 Username:
        input(type='text' class='textbox' name="username" id=txtUsername value=username)
        br

        h3 Password:
        input(type='text' class='password' name="password" id=txtPassword value=password)
        br

        h3 Email:
        input(type='text' class='textbox' name="email" id=txtEmail value=email)
        br

        h3 Age:
        input(type='text' class='textbox' name="age" id=txtAge value=age)
        br
        br
        div(id='avatarEditor' class='avatarEditor')

          h3 Select Eyes:
          select(id='selEyes')
            option(value='1')
              p Eyes 1
            option(value='2')
              p Eyes 2
            option(value='3')
              p Eyes 3
            option(value='4')
              p Eyes 4
            option(value='5')
              p Eyes 5
            option(value='6')
              p Eyes 6
            option(value='7')
              p Eyes 7
            option(value='9')
              p Eyes 8
            option(value='10')
              p Eyes 9
          br
          h3 Select Nose:
          select(id='selNose')
            option(value='2')
              p Nose 1
            option(value='3')
              p Nose 2
            option(value='4')
              p Nose 3
            option(value='5')
              p Nose 4
            option(value='6')
              p Nose 5
            option(value='7')
              p Nose 6
            option(value='8')
              p Nose 7
            option(value='9')
              p Nose 8
          br
          h3 Select Mouth:
          select(id='selMouth')
            option(value='1')
              p Mouth 1
            option(value='3')
              p Mouth 2
            option(value='5')
              p Mouth 3
            option(value='6')
              p Mouth 4
            option(value='7')
              p Mouth 5
            option(value='9')
              p Mouth 6
            option(value='10')
              p Mouth 7
            option(value='11')
              p Mouth 8
          br

          h3 Select Color:
          input(type='color' name='color' id='selColor')
          br
          br
          img(id='imgAvatar' style='border-radius: 20px' src=avatarString)
        input(type='submit' id='btnSubmit' text='Submit')
  script(src='/scripts/avatarStuff.js')